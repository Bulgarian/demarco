{% block content %}
    <div class="block-4 img-bg-1 indent bg-1">
        <div class="container">
            {% for section, post in posts %}
                <div class="row">
                    {{ section }}
                </div>
                {% set i = 0 %}
                {% for item in post %}
                    {% if i == 0 %}
                        <div class="row">
                    {% endif %}
                        {{ item.summary|raw }}
                        {% set i = i + 1 %}
                    {% if i == 3 %}
                        </div>
                        {% set i = 0 %}
                    {% endif %}
                {% endfor %}
                {% if i != 3 %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

